  background: #fbf7f8;
  margin: 0px 4px;
}

// 文章```代码块顶部样式
.highlight figcaption {
  margin: 0em;
  padding: 0.5em;
  background: #eee;
  border-bottom: 1px solid #e9e9e9;
}

.highlight figcaption a {
  color: rgb(80, 115, 184);
}

// 文章```代码块diff样式
pre .addition {
  background: #e6ffed;
}

pre .deletion {
  background: #ffeef0;
}

// 右下角侧栏按钮样式
.sidebar-toggle {
  right: 10px;
