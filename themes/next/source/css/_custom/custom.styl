// 侧栏社交链接
.links-of-author {
  margin-top: 0px;
}

// 侧栏友链标题
.links-of-blogroll-title {
  margin-bottom: 10px;
  margin-top: 15px;
  color: rgba(7, 179, 155, 0.75);
